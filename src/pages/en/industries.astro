---
import BaseLayout from '../../layouts/BaseLayout.astro';

const title = 'Industries | SUNGJINLOGIS';
const description =
  'From premium automotive interior appearance parts to mobile/IT, home appliances, and industrial HMI housings‚Äîan overview of industries where plastic plating and surface finishing are applied based on appearance, corrosion resistance, and reliability requirements.';

/**
 * (Optional) One-line SEO keywords
 * - Best placed right under the HERO section as sr-only.
 */
const seoKeywords =
  'automotive interior plating, premium appearance parts, plastic plating (POP), trivalent chrome, nickel plating, mobile camera bracket, industrial HMI housing, surface finishing, corrosion resistance, color consistency';

/**
 * Current focus industries (in production / proven)
 * - status badge:
 *   - "In Production" => highlighted badge
 *   - others => neutral badge
 */
const inProduction = [
  {
    title: 'Automotive Interior Decor',
    subtitle: 'Premium appearance parts',
    status: 'In Production',
    desc: 'Interior trim and control parts designed to meet premium appearance, tactile feel, and corrosion-resistance requirements.',
    points: [
      'Control-panel metal deco such as switch panels, dial bezels, and knobs',
      'Simultaneously meet appearance (gloss/color) + corrosion (salt spray, etc.) requirements',
      'Specification-driven operation (e.g., semi-bright base + bright top nickel stack)',
    ],
  },
  {
    title: 'Mobile / IT Components',
    subtitle: 'Camera brackets ¬∑ appearance trim',
    status: 'In Production',
    desc: 'Small precision parts where appearance, dimensional consistency, and scratch durability are critical.',
    points: [
      'Color and gloss consistency management for precision appearance parts',
      'Thickness/dimension/appearance standards considering downstream and assembly processes',
      'Standardized conditions and traceability based on required specifications',
    ],
  },
  {
    title: 'Home Appliances',
    subtitle: 'Premium appearance trim',
    status: 'Applicable',
    desc: 'Premium appliance trims requiring strong appearance quality and corrosion resistance in daily environments.',
    points: [
      'Applicable to control/trim and decorative appearance parts',
      'Supports corrosion, stain resistance, and cleaning durability requirements',
      'Repeatability-first control for mass production stability',
    ],
  },
];

/**
 * Expandable industries (future/additional)
 */
const expandable = [
  {
    title: 'Industrial HMI / Control Panels / Housings',
    subtitle: 'Industrial equipment UI & control parts',
    desc: 'Industrial exteriors where durability, appearance, and performance under harsh environments (contamination/heat/humidity) are required.',
    points: [
      'Decorative control panels, button housings, and cover parts',
      'Supports durability, corrosion resistance, and surface-quality requirements',
      'Surface specs can be aligned to brand/grade requirements',
    ],
  },
  {
    title: 'IT / Electronics Appearance Trim',
    subtitle: 'Premium design trim',
    desc: 'High-end appearance parts where micro-defect control is critical.',
    points: [
      'Standardized processes for premium gloss and color consistency',
      'Defect-focused control (pinhole/marks/uniformity)',
      'Can consider downstream processes (printing/laser/coating) integration',
    ],
  },
  {
    title: 'Smart Home & Premium Appliances',
    subtitle: 'UI trim / decorative parts',
    desc: 'Products where appearance, touch feel, and durability in user-contact areas are important.',
    points: [
      'Applicable to control and decorative parts',
      'Supports corrosion and stain resistance in daily environments',
      'Repeatability-centered control for mass production',
    ],
  },
  {
    title: 'Automotive Electronics / Mobility UI Parts',
    subtitle: 'Vehicle & mobility control interfaces',
    desc: 'Parts with high requirements for durability, appearance, and reliability at the same time.',
    points: [
      'Applicable to dial controls, button bezels, and general control appearance parts',
      'Supports reliability test requirements such as salt spray',
      'Process operation based on spec targets (thickness/appearance/downstream)',
    ],
  },
];

/**
 * Production examples (Automotive interior)
 * Recommended path:
 * public/images/industries/automotive-interior/production/
 */
const automotiveProducts = [
  {
    name: 'Center fascia switch panel (keyboard type) - 01',
    src: '/images/industries/automotive-interior/production/keyboard-switch-panel-01.png',
    alt: 'Center fascia switch panel (keyboard type) production example',
  },
  {
    name: 'Center fascia switch panel (keyboard type) - 02',
    src: '/images/industries/automotive-interior/production/keyboard-switch-panel-02.png',
    alt: 'Center fascia switch panel (keyboard type) production example',
  },
  {
    name: 'Center fascia switch panel (keyboard type) - 03',
    src: '/images/industries/automotive-interior/production/keyboard-switch-panel-03.png',
    alt: 'Center fascia switch panel (keyboard type) production example',
  },
  {
    name: 'Center fascia switch panel (keyboard type) - 04',
    src: '/images/industries/automotive-interior/production/keyboard-switch-panel-04.png',
    alt: 'Center fascia switch panel (keyboard type) production example',
  },
  {
    name: 'Center console switch trim',
    src: '/images/industries/automotive-interior/production/center-console-switch-trim-01.png',
    alt: 'Center console switch trim production example',
  },
  {
    name: 'Lever / paddle trim (metal deco)',
    src: '/images/industries/automotive-interior/production/paddle-lever-trim-01.png',
    alt: 'Lever / paddle trim production example',
  },
  {
    name: 'Multi-function control knob',
    src: '/images/industries/automotive-interior/production/multifunction-control-knob-01.png',
    alt: 'Multi-function control knob production example',
  },
  {
    name: 'Dial controller bezel/knob - 01',
    src: '/images/industries/automotive-interior/production/dial-controller-bezel-knob-01.png',
    alt: 'Dial controller bezel/knob production example',
  },
  {
    name: 'Dial controller bezel/knob - 02',
    src: '/images/industries/automotive-interior/production/dial-controller-bezel-knob-02.png',
    alt: 'Dial controller bezel/knob production example',
  },
];

const hasAutomotiveProducts = automotiveProducts.length > 0;
---

<BaseLayout title={title} description={description} lang="en" pathPrefix="/en">
  {/* HERO */}
  <section class="rounded-2xl border border-stroke bg-base p-6 shadow-soft">
    <a class="text-sm text-accent hover:underline" href="/en/">
      ‚Üê Home
    </a>

    <h1 class="mt-2 text-3xl font-semibold tracking-tight md:text-4xl">
      Industries
    </h1>

    <p class="mt-3 text-sm md:text-base leading-relaxed !text-sub drop-shadow-md">
      SUNGJINLOGIS plating/surface finishing can be applied across a wide range of premium appearance parts‚Äîfrom
      automotive interiors and mobile/IT to home appliances and industrial housings.
      <br />
      <span class="text-white/80">
        The ‚ÄúIn Production‚Äù badge indicates items with current production history/operation.
      </span>
    </p>

    {/* (Optional) SEO keywords (hidden) */}
    <p class="sr-only">SEO: {seoKeywords}</p>
  </section>

  {/* Key industries */}
  <section class="mt-10 rounded-2xl border border-stroke bg-base p-6 shadow-soft">
    <h2 class="text-lg font-semibold">Key Industries</h2>
    <p class="mt-2 text-sm text-sub">
      A summary of primary application areas.
    </p>

    <div class="mt-4 grid gap-4 md:grid-cols-3">
      {inProduction.map((item) => (
        <div class="rounded-2xl border border-stroke bg-surface p-5 shadow-soft">
          <div class="flex items-start justify-between gap-3">
            <div>
              <div class="text-base font-semibold text-white">{item.title}</div>
              <div class="mt-1 text-xs text-white/70">{item.subtitle}</div>
            </div>

            <span
              class={`shrink-0 rounded-full border border-stroke px-2 py-1 text-[11px] ${
                item.status === 'In Production'
                  ? 'bg-accent/15 text-accent'
                  : 'bg-white/5 text-white/70'
              }`}
            >
              {item.status}
            </span>
          </div>

          <p class="mt-3 text-sm text-sub leading-relaxed">{item.desc}</p>

          <ul class="mt-4 space-y-2 text-sm text-sub">
            {item.points.map((p) => (
              <li class="flex gap-2">
                <span class="mt-[3px] h-1.5 w-1.5 rounded-full bg-white/40"></span>
                <span>{p}</span>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>
  </section>

  {/* Production photos (Automotive interior) */}
  {hasAutomotiveProducts && (
    <section class="mt-10 rounded-2xl border border-stroke bg-base p-6 shadow-soft">
      <h2 class="text-lg font-semibold">Production Examples (Photos)</h2>
      <p class="mt-2 text-sm text-sub">
        Production examples for premium automotive interior appearance parts.
      </p>

      {/* Click events delegated on this container */}
      <div id="production-examples" class="mt-4 grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
        {automotiveProducts.map((p) => (
          <figure class="overflow-hidden rounded-2xl border border-stroke bg-surface shadow-soft">
            <button
              type="button"
              class="group relative block w-full bg-base"
              style="aspect-ratio: 16 / 9; min-height: 220px;"
              data-lightbox-trigger
              data-src={p.src}
              data-alt={p.alt}
              data-name={p.name}
              aria-label={`Open image: ${p.name}`}
            >
              <img
                src={p.src}
                alt={p.alt}
                class="h-full w-full object-contain"
                loading="lazy"
                decoding="async"
              />

              {/* Hover overlay */}
              <div class="pointer-events-none absolute inset-0 flex items-center justify-center opacity-0 transition-opacity group-hover:opacity-100">
                <div class="flex items-center gap-2 rounded-full border border-stroke bg-black/40 px-3 py-1.5 text-xs text-white/90 backdrop-blur">
                  <span aria-hidden="true">üîç</span>
                  Click to enlarge
                </div>
              </div>
            </button>

            <figcaption class="p-3 text-xs text-white/70">
              {p.name}
              <span class="ml-2 rounded-full border border-stroke bg-accent/10 px-2 py-0.5 text-[10px] text-accent">
                In Production
              </span>
            </figcaption>
          </figure>
        ))}
      </div>

      {/* Lightbox (modal) */}
      <div
        id="lightbox"
        class="fixed inset-0 z-50 hidden flex items-center justify-center p-4"
        role="dialog"
        aria-modal="true"
        aria-hidden="true"
      >
        <div data-lightbox-backdrop class="absolute inset-0 bg-black/70 backdrop-blur-sm"></div>

        <div class="relative z-10 w-[96vw] max-w-[1200px] overflow-hidden rounded-2xl border border-stroke bg-base shadow-soft">
          <div class="flex items-center justify-between gap-3 border-b border-stroke/60 px-4 py-3">
            <p data-lightbox-caption class="text-sm text-white/80"></p>
            <button
              type="button"
              class="rounded-full border border-stroke bg-white/5 px-3 py-1.5 text-xs text-white/80 hover:bg-white/10"
              data-lightbox-close
            >
              Close ‚úï
            </button>
          </div>

          <div class="flex items-center justify-center p-3 md:p-4">
            <img
              data-lightbox-img
              src=""
              alt=""
              class="w-full max-w-[1200px] h-auto max-h-[85vh] object-contain"
            />
          </div>
        </div>
      </div>

      {/* Script: bind once, works with Astro page transitions */}
      <script is:inline>
        {`
          (() => {
            const init = () => {
              const scope = document.querySelector('#production-examples');
              const lb = document.querySelector('#lightbox');
              if (!scope || !lb) return;

              if (lb.dataset.bound === '1') return;
              lb.dataset.bound = '1';

              const img = lb.querySelector('[data-lightbox-img]');
              const cap = lb.querySelector('[data-lightbox-caption]');
              const backdrop = lb.querySelector('[data-lightbox-backdrop]');

              const open = (src, alt, caption) => {
                if (!img || !src) return;
                img.src = src;
                img.alt = alt || '';
                if (cap) cap.textContent = caption || '';
                lb.classList.remove('hidden');
                lb.setAttribute('aria-hidden', 'false');
                document.documentElement.style.overflow = 'hidden';
              };

              const close = () => {
                lb.classList.add('hidden');
                lb.setAttribute('aria-hidden', 'true');
                if (img) img.src = '';
                if (cap) cap.textContent = '';
                document.documentElement.style.overflow = '';
              };

              scope.addEventListener('click', (e) => {
                const btn = e.target.closest('[data-lightbox-trigger]');
                if (!btn) return;
                open(btn.dataset.src, btn.dataset.alt, btn.dataset.name);
              });

              lb.addEventListener('click', (e) => {
                if (e.target === backdrop) close();
                if (e.target.closest('[data-lightbox-close]')) close();
              });

              document.addEventListener('keydown', (e) => {
                if (e.key === 'Escape' && !lb.classList.contains('hidden')) close();
              });
            };

            if (document.readyState === 'loading') {
              document.addEventListener('DOMContentLoaded', init);
            } else {
              init();
            }

            document.addEventListener('astro:page-load', init);
          })();
        `}
      </script>
    </section>
  )}

  {/* Expandable industries */}
  <section class="mt-10 rounded-2xl border border-stroke bg-base p-6 shadow-soft">
    <h2 class="text-lg font-semibold">Expandable Industries</h2>
    <p class="mt-2 text-sm text-sub">
      Application coverage can expand depending on requirements (appearance/corrosion/thickness/downstream processes).
    </p>

    <div class="mt-4 grid gap-4 md:grid-cols-2">
      {expandable.map((item) => (
        <div class="rounded-2xl border border-stroke bg-surface p-5 shadow-soft">
          <div class="text-base font-semibold text-white">{item.title}</div>
          <div class="mt-1 text-xs text-white/70">{item.subtitle}</div>
          <p class="mt-3 text-sm text-sub leading-relaxed">{item.desc}</p>

          <ul class="mt-4 space-y-2 text-sm text-sub">
            {item.points.map((p) => (
              <li class="flex gap-2">
                <span class="mt-[3px] h-1.5 w-1.5 rounded-full bg-white/40"></span>
                <span>{p}</span>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>
  </section>

  {/* Consultation CTA */}
  <section class="mt-10 rounded-2xl border border-stroke bg-base p-6 shadow-soft">
    <h2 class="text-lg font-semibold">Application Review</h2>
    <p class="mt-2 text-sm text-sub leading-relaxed">
      The optimal process configuration depends on your product‚Äôs
      <span class="text-white font-semibold"> appearance (gloss/color)</span>,
      <span class="text-white font-semibold"> corrosion requirements</span>, and
      <span class="text-white font-semibold"> downstream processes (printing/laser/assembly)</span>.<br />
      If needed, we can review samples/drawings and propose feasible scope and key control points.
    </p>

    <div class="mt-4">
      <a
        href="/en/contact/"
        class="inline-flex items-center rounded-2xl border border-stroke bg-accent/15 px-4 py-2 text-sm font-semibold text-accent hover:bg-accent/20"
      >
        Contact us ‚Üí
      </a>
    </div>
  </section>
</BaseLayout>
