---
import BaseLayout from '../../layouts/BaseLayout.astro';

const title = 'Facilities & Lines | SUNGJINLOGIS';
const description =
  'We operate infrastructure that supports repeatability and quality trust—from robotic pretreatment and large carrier lines to long-life filtration, eco-friendly trivalent chrome, in-house verification equipment, and a chemical analysis lab.';

const summaryCards = [
  {
    title: 'Industrial Robot Pretreatment',
    subtitle: 'Robotic pretreatment automation',
    desc: 'By standardizing time, temperature, and transfer conditions, we reduce process variation and secure a repeatable foundation for downstream plating quality.',
    tags: ['Standard recipes', 'Fixed parameters', 'Repeatability'],
  },
  {
    title: 'Large Carrier Line',
    subtitle: 'Acid copper + bright/semi-bright nickel carrier line',
    desc: 'Large carrier operation stabilizes production and allows condition control aligned with thickness, appearance, and downstream process requirements.',
    tags: ['Carrier operation', 'Appearance & thickness', 'Stable line'],
  },
  {
    title: 'Long-life Filtration',
    subtitle: 'Continuous filtration for matte/satin processes',
    desc: 'Continuous reduction of fine particles and suspended matter lowers defect risks (specks, haze, stains) and stabilizes color variation for matte finishes.',
    tags: ['Turnover 기준', 'ΔP control', 'Cleanliness'],
  },
  {
    title: 'Trivalent Chrome Line',
    subtitle: 'Eco-friendly hex-free Cr3+ chrome + post-treatment',
    desc: 'We operate trivalent chrome plating integrated with post-treatment (passivation) to meet regulations while satisfying corrosion resistance and appearance requirements.',
    tags: ['Hex-free', 'Corrosion resistance', 'Standardized process'],
  },
  {
    title: 'Testing & Verification',
    subtitle: 'In-house testing-based quality system',
    desc: 'We run an internal system to confirm key characteristics—thickness, appearance, adhesion, and corrosion—enabling fast response to customer requirements.',
    tags: ['Thickness', 'Adhesion', 'Salt spray / CASS'],
  },
  {
    title: 'Chemical Analysis Lab',
    subtitle: 'Bath analysis & process data management',
    desc: 'We analyze bath composition, contamination, and variation, managing history-based data to strengthen stability and traceability.',
    tags: ['Bath analysis', 'Traceability', 'Variation reduction'],
  },
];

// Line inventory — focus on operations/controls rather than sensitive specs
const lineInventory = [
  {
    name: 'Robot Pretreatment (Automation)',
    processes: ['Pretreatment (activation / cleaning / conditioning)', 'Standard transfer & time control'],
    strengths: ['Minimize variation through standardized conditions', 'Secure a stable foundation for downstream plating quality'],
    controls: ['Standard recipes for time · temperature · concentration', 'Standardized sampling location/time'],
    verification: ['Appearance', 'Adhesion (as needed)', 'Process history'],
  },
  {
    name: 'Large Carrier Line (Acid Copper / Nickel)',
    processes: ['Acid copper (leveling base build)', 'Semi-bright nickel (base)', 'Bright nickel (top)'],
    strengths: ['Balanced appearance quality and corrosion performance', 'Flexible operation aligned with spec (thickness/appearance/downstream)'],
    controls: ['Current / voltage / time control', 'Rinse & drag-out management'],
    verification: ['Thickness', 'Appearance', 'Adhesion', 'Corrosion (as required)'],
  },
  {
    name: 'Matte / Satin + Long-life Filtration',
    processes: ['Matte / satin nickel', 'Continuous long-life filtration (cleanliness control)'],
    strengths: ['Lower risk of specks/haze/stains', 'More uniform color and texture'],
    controls: ['Turnover (circulation rate) criteria', 'Replace/clean when ΔP rises'],
    verification: ['Appearance', 'Color deviation check', 'Process history'],
  },
  {
    name: 'Trivalent Chromium + Passivation',
    processes: ['Trivalent chromium plating (Cr3+)', 'Post-treatment (passivation)'],
    strengths: ['Hex-free regulatory compliance', 'Meet corrosion and appearance requirements together'],
    controls: ['Maintain bath conditions (temperature/pH/concentration)', 'Standardize post-treatment time · concentration · agitation'],
    verification: ['Corrosion (salt spray / CASS as required)', 'Appearance', 'Process history'],
  },
];

const opsPoints = [
  {
    title: 'Standard Recipe Operation',
    items: [
      'Define baseline targets for time/temperature/concentration and operate by recipes',
      'Standardize sampling location and timing to minimize data fluctuation',
      'Maintain traceable history (additions/replacements/inspections) for root-cause analysis',
    ],
  },
  {
    title: 'Drag-out & Contamination Control',
    items: [
      'Minimize drag-out through rinse-stage operating standards',
      'Reduce fine particles and suspended matter by checking filtration/circulation status',
      'When needed, strengthen carbon/filtration to address organics and fine particles together',
    ],
  },
  {
    title: 'Maintenance & Preventive Checks',
    items: [
      'Manage filtration condition based on indicators such as ΔP and flow rate',
      'Stabilize rectifier/power quality and current conditions',
      'Reduce line condition drift through a regular inspection system',
    ],
  },
];

const testAndInspection = [
  'Plating thickness measurement',
  'Salt spray testing (including CASS when required)',
  'Hull cell (bath condition / additive tendency check)',
  'Microscopy (optical/electron) observation as needed',
  'Temperature/humidity cycling & thermal shock as required',
  'Adhesion / peel testing as required',
  'XRF thickness measurement (if available/applicable)',
];

const labPoints = [
  'Bath chemistry analysis to manage composition and variation (e.g., pH, key constituents, contamination trends)',
  'Sample and history management to secure traceability',
  'Data-based comparison before/after condition changes to minimize quality risk',
  'Support test reports aligned with customer requirements (within capability and scope)',
];
---

<BaseLayout title={title} description={description} lang="en" pathPrefix="/en">
  {/* HERO */}
  <section class="rounded-2xl border border-stroke bg-base p-6 shadow-soft">
    <h1 class="text-3xl font-semibold tracking-tight md:text-4xl">Facilities</h1>
    <p class="mt-2 text-sm text-sub">
      A summary of facilities and lines that support repeatability and quality trust.
      (High-resolution line photos are available upon request.)
    </p>

    {/* Summary cards (6) */}
    <div class="mt-6 grid gap-4 md:grid-cols-2 xl:grid-cols-3">
      {summaryCards.map((c) => (
        <div class="rounded-2xl border border-stroke bg-surface p-5 shadow-soft">
          <div class="text-sm font-semibold text-white">{c.title}</div>
          <div class="mt-1 text-xs text-white/70">{c.subtitle}</div>
          <p class="mt-3 text-sm text-sub leading-relaxed">{c.desc}</p>

          <div class="mt-4 flex flex-wrap gap-2">
            {c.tags.map((t) => (
              <span class="rounded-full border border-stroke bg-base px-2.5 py-1 text-[11px] text-white/70">
                {t}
              </span>
            ))}
          </div>
        </div>
      ))}
    </div>
  </section>

  {/* Line inventory */}
  <section class="mt-10 rounded-2xl border border-stroke bg-base p-6 shadow-soft">
    <h2 class="text-lg font-semibold">Line Overview</h2>
    <p class="mt-2 text-sm text-sub">
      We describe each line from the perspective of process scope, operational control points, and verifiable items.
    </p>

    <div class="mt-4 overflow-x-auto">
      <table class="min-w-[980px] w-full border-separate border-spacing-0 overflow-hidden rounded-2xl border border-stroke bg-surface">
        <thead class="bg-base">
          <tr>
            <th class="border-b border-stroke px-4 py-3 text-left text-xs font-semibold text-white/80">Line / Facility</th>
            <th class="border-b border-stroke px-4 py-3 text-left text-xs font-semibold text-white/80">Process Scope</th>
            <th class="border-b border-stroke px-4 py-3 text-left text-xs font-semibold text-white/80">Key Strengths</th>
            <th class="border-b border-stroke px-4 py-3 text-left text-xs font-semibold text-white/80">Control Points</th>
            <th class="border-b border-stroke px-4 py-3 text-left text-xs font-semibold text-white/80">Verification</th>
          </tr>
        </thead>
        <tbody>
          {lineInventory.map((row, idx) => (
            <tr class={idx !== 0 ? 'border-t border-stroke' : ''}>
              <td class="align-top px-4 py-4 text-sm text-white">
                <div class="font-semibold">{row.name}</div>
              </td>

              <td class="align-top px-4 py-4 text-sm text-sub">
                <ul class="space-y-1">
                  {row.processes.map((p) => (
                    <li class="leading-relaxed">• {p}</li>
                  ))}
                </ul>
              </td>

              <td class="align-top px-4 py-4 text-sm text-sub">
                <ul class="space-y-1">
                  {row.strengths.map((p) => (
                    <li class="leading-relaxed">• {p}</li>
                  ))}
                </ul>
              </td>

              <td class="align-top px-4 py-4 text-sm text-sub">
                <ul class="space-y-1">
                  {row.controls.map((p) => (
                    <li class="leading-relaxed">• {p}</li>
                  ))}
                </ul>
              </td>

              <td class="align-top px-4 py-4 text-sm text-sub">
                <div class="flex flex-wrap gap-2">
                  {row.verification.map((v) => (
                    <span class="rounded-full border border-stroke bg-base px-2.5 py-1 text-[11px] text-white/70">
                      {v}
                    </span>
                  ))}
                </div>
              </td>
            </tr>
          ))}
        </tbody>
      </table>
    </div>
  </section>

  {/* Operational management */}
  <section class="mt-10 rounded-2xl border border-stroke bg-base p-6 shadow-soft">
    <h2 class="text-lg font-semibold">Operation & Control</h2>
    <p class="mt-2 text-sm text-sub">
      Key operating points to keep line performance stable over time.
    </p>

    <div class="mt-4 grid gap-4 lg:grid-cols-3">
      {opsPoints.map((b) => (
        <div class="rounded-2xl border border-stroke bg-surface p-5 shadow-soft">
          <div class="text-sm font-semibold text-white">{b.title}</div>
          <ul class="mt-3 space-y-2 text-sm text-sub">
            {b.items.map((it) => (
              <li class="leading-relaxed">• {it}</li>
            ))}
          </ul>
        </div>
      ))}
    </div>
  </section>

  {/* Verification infrastructure */}
  <section class="mt-10 rounded-2xl border border-stroke bg-base p-6 shadow-soft">
    <h2 class="text-lg font-semibold">Verification Infrastructure</h2>
    <p class="mt-2 text-sm text-sub">
      Process trust starts with measurability. We respond with in-house testing and analysis capability.
    </p>

    <div class="mt-4 grid gap-4 lg:grid-cols-2">
      {/* Testing */}
      <div class="rounded-2xl border border-stroke bg-surface p-5 shadow-soft">
        <div class="text-sm font-semibold text-white">Testing & Inspection</div>
        <p class="mt-2 text-sm text-sub">We confirm and manage major items such as thickness, appearance, adhesion, and corrosion.</p>
        <ul class="mt-3 space-y-2 text-sm text-sub">
          {testAndInspection.map((t) => (
            <li class="leading-relaxed">• {t}</li>
          ))}
        </ul>
      </div>

      {/* Lab */}
      <div class="rounded-2xl border border-stroke bg-surface p-5 shadow-soft">
        <div class="text-sm font-semibold text-white">Chemical Analysis Laboratory</div>
        <p class="mt-2 text-sm text-sub">
          Bath analysis and data-based management reduce process variation and strengthen traceability.
        </p>
        <ul class="mt-3 space-y-2 text-sm text-sub">
          {labPoints.map((t) => (
            <li class="leading-relaxed">• {t}</li>
          ))}
        </ul>
      </div>
    </div>

    {/* CTA */}
    <div class="mt-6 rounded-2xl border border-stroke bg-surface p-5 shadow-soft">
      <div class="text-sm font-semibold text-white">Information Availability</div>
      <p class="mt-2 text-sm text-sub leading-relaxed">
        High-resolution photos, detailed specs, and test capability ranges can be provided and discussed upon customer request.
        Please share your needs (part, specification, test conditions) via Contact.
      </p>

      <div class="mt-4 flex flex-wrap gap-3">
        <a href="/en/contact/" class="rounded-full bg-accent px-4 py-2 text-sm font-semibold text-white hover:opacity-90">
          Contact us
        </a>
        <a href="/en/capabilities/" class="rounded-full border border-stroke bg-base px-4 py-2 text-sm font-semibold text-white/80 hover:bg-surface">
          View Capabilities →
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
