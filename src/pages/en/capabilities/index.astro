---
import BaseLayout from '../../../layouts/BaseLayout.astro';

const title = 'Capabilities | SUNGJINLOGIS';
const description =
  'Core process capabilities: robotic pretreatment, matte/satin nickel with long-life filtration, trivalent chromium, acid copper, and bright/semi-bright nickel.';

const items = [
  {
    slug: 'robotic-pretreatment',
    name: 'Robotic Pretreatment',
    desc: 'Standardized robotic processing to reduce variation and stabilize adhesion and appearance.'
  },
  {
    slug: 'matte-satin',
    name: 'Matte / Satin Nickel + Long-life Continuous Filtration',
    desc: 'Continuous particle/contamination control to maintain uniform texture and consistent color tone.'
  },
  {
    slug: 'trivalent-chrome',
    name: 'Trivalent Chromium (Hex-free)',
    desc: 'Hex-free plating system to meet regulations while delivering corrosion resistance and premium appearance.'
  },
  {
    slug: 'acid-copper',
    name: 'Acid Copper',
    desc: 'Forms a leveling base layer that strongly influences downstream nickel/chrome quality.'
  },
  {
    slug: 'bright-nickel',
    name: 'Bright Nickel / Semi-bright Nickel',
    desc: 'Multi-layer nickel structures designed for high gloss, corrosion performance, and balanced tone/durability.'
  },
];
---

<BaseLayout title={title} description={description} lang="en" pathPrefix="/en">
  <section>
    <h1 class="text-2xl font-semibold">Capabilities</h1>
    <p class="mt-2 text-sm text-sub">
      Each process page can be expanded later with photos, process flow, and key control points.
    </p>

    <div class="mt-6 grid gap-4 md:grid-cols-2 lg:grid-cols-3">
      {items.map((i) => (
        <a
          class="rounded-xl2 border border-stroke bg-surface p-5 shadow-soft hover:border-accent transition"
          href={`/en/capabilities/${i.slug}/`}
        >
          <div class="text-sm font-semibold">{i.name}</div>
          <div class="mt-1 text-sm text-sub">{i.desc}</div>
        </a>
      ))}
    </div>
  </section>
</BaseLayout>
