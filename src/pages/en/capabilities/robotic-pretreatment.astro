---
import BaseLayout from '../../../layouts/BaseLayout.astro';

const title = 'Robotic Pretreatment | Capabilities | SUNGJINLOGIS';
const description =
  'Robotic pretreatment reduces process variation and ensures stable plating adhesion and repeatable cosmetic appearance.';

const highlights = [
  { title: 'Standardized Operating Conditions', desc: 'Standardizes key variables such as time, temperature, and concentration to minimize operator-to-operator variation.' },
  { title: 'Repeatability-Driven Quality', desc: 'Secures pretreatment uniformity to reduce color and appearance variation in downstream processes.' },
  { title: 'Production Stability', desc: 'Reduces process drift in continuous production to manage defect risk and rework.' },
];

const controlPoints = [
  'Operate each pretreatment tank with standardized recipes (time/temperature/concentration)',
  'Maintain treatment uniformity by checking agitation, filtration, and circulation conditions',
  'Manage rinse water quality and contamination to minimize drag-out and contamination risk',
  'Control contact and contamination factors by standardizing rack/fixture cleaning and maintenance',
  'Reduce process variation by standardizing robot motions (immersion/transfer/drip time)',
];

const evidence = [
  'In-house evaluation of thickness, appearance, and adhesion with data-based history tracking',
  'Quality systems in operation: SQ / ISO 9001 / customer requirement compliance',
  'When issues occur: root-cause analysis → condition correction → recurrence prevention (reflected in SOPs and checklists)',
];

const applications = [
  'Automotive interior parts: supports demanding requirements for appearance and tone consistency',
];

const photos = [
  { src: '/images/capabilities/robotic-pretreatment/robot-00.jpg', alt: 'Robotic pretreatment line (robot arm)' },
  { src: '/images/capabilities/robotic-pretreatment/robot-01.jpg', alt: 'Robotic pretreatment line (multi-robot setup)' },
  { src: '/images/capabilities/robotic-pretreatment/robot-02.jpg', alt: 'Automated pretreatment/plating area (degreasing, etching)' },
  { src: '/images/capabilities/robotic-pretreatment/robot-03.jpg', alt: 'Automated pretreatment/plating area (electroless nickel)' },
];
---

<BaseLayout title={title} description={description} lang="en" pathPrefix="/en">
  <!-- HERO -->
  <section class="rounded-3xl border border-stroke bg-base p-6 shadow-soft">
    <a class="text-sm text-accent hover:underline" href="/en/capabilities/">
      ← Capabilities
    </a>

    <h1 class="mt-2 text-3xl font-semibold tracking-tight md:text-4xl">
      Robotic Pretreatment
    </h1>

    <p class="mt-3 text-sm md:text-base leading-relaxed !text-sub drop-shadow-md">
      SUNGJINLOGIS standardizes process conditions through <span class="text-white font-semibold">robotic pretreatment automation</span>,
      ensuring stable <span class="text-white font-semibold">plating adhesion</span> and repeatable
      <span class="text-white font-semibold">cosmetic appearance</span>.
    </p>

    <div class="mt-6 grid gap-4 md:grid-cols-3">
      {highlights.map((h) => (
        <div class="rounded-2xl border border-stroke bg-surface p-5 shadow-soft">
          <div class="text-sm font-semibold text-white">{h.title}</div>
          <p class="mt-2 text-sm text-sub leading-relaxed">{h.desc}</p>
        </div>
      ))}
    </div>
  </section>

  <!-- Control Points -->
  <section class="mt-10 rounded-3xl border border-stroke bg-base p-6 shadow-soft">
    <h2 class="text-lg font-semibold">Control Points</h2>
    <p class="mt-2 text-sm text-sub">
      A summary of key control items that create pretreatment uniformity.
    </p>

    <div class="mt-4 grid gap-3 md:grid-cols-2">
      {controlPoints.map((t) => (
        <div class="rounded-xl border border-stroke bg-surface p-4 text-sm text-sub">
          • {t}
        </div>
      ))}
    </div>
  </section>

  <!-- Verification Evidence -->
  <section class="mt-10 rounded-3xl border border-stroke bg-base p-6 shadow-soft">
    <h2 class="text-lg font-semibold">Verification Evidence</h2>
    <p class="mt-2 text-sm text-sub">
      We build process confidence through measurable data and systems.
    </p>

    <div class="mt-4 grid gap-3">
      {evidence.map((t) => (
        <div class="rounded-xl border border-stroke bg-surface p-4 text-sm text-sub">
          • {t}
        </div>
      ))}
    </div>
  </section>

  <!-- Typical Applications -->
  <section class="mt-10 rounded-3xl border border-stroke bg-base p-6 shadow-soft">
    <h2 class="text-lg font-semibold">Typical Applications</h2>
    <p class="mt-2 text-sm text-sub">Applied to product groups with strict appearance-quality requirements.</p>

    <div class="mt-4 grid gap-3 md:grid-cols-2">
      {applications.map((t) => (
        <div class="rounded-xl border border-stroke bg-surface p-4 text-sm text-sub">
          • {t}
        </div>
      ))}
    </div>
  </section>

  <!-- Equipment / Line Photos -->
  <section class="mt-10 rounded-3xl border border-stroke bg-base p-6 shadow-soft">
    <h2 class="text-lg font-semibold">Equipment / Line Photos</h2>
    <p class="mt-2 text-sm text-sub">Examples of operating a robotic, automated pretreatment line.</p>

    <div class="mt-4 grid gap-4 md:grid-cols-2">
      {photos.map((p) => (
        <figure class="overflow-hidden rounded-2xl border border-stroke bg-surface">
          <img
            src={p.src}
            alt={p.alt}
            loading="lazy"
            class="w-full object-cover"
          />
          <figcaption class="p-3 text-xs text-sub">
            {p.alt}
          </figcaption>
        </figure>
      ))}
    </div>
  </section>
</BaseLayout>
