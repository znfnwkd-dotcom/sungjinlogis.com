---
import BaseLayout from '../../../layouts/BaseLayout.astro';

const title = 'Trivalent Chromium (Hex-free) | SUNGJINLOGIS';
const description =
  'A Hex-free (no hexavalent chromium) trivalent chromium process with an integrated passivation system—meeting regulatory requirements while achieving both corrosion resistance and consistent appearance.';

const highlights = [
  {
    title: 'Hex-free Trivalent Chromium Process',
    desc: 'Uses trivalent chromium without hexavalent chromium, supporting environmental compliance while maintaining stable cosmetic quality.',
  },
  {
    title: 'TriMac Blue + Tristar Shield',
    desc: 'Links trivalent chromium plating (TriMac Blue) with passivation (Tristar Shield) to enhance corrosion resistance and appearance uniformity.',
  },
  {
    title: 'Dedicated Rectifier Operation (MUNK)',
    desc: 'Operates with a dedicated rectifier (MUNK, Germany) to control current quality and process repeatability.',
  },
];

const controlPoints = [
  'Maintain target bath conditions (concentration/temperature/pH) to minimize color and gloss variation',
  'Control current and voltage (including waveform) to stabilize deposition and ensure appearance uniformity',
  'Standardize passivation parameters (time/concentration/agitation) to achieve corrosion resistance',
  'Manage rinsing and drag-out to reduce contamination entry and bath fluctuation risk',
  'Reduce data variation through periodic sampling at standardized locations (repeatability-focused control)',
  'Keep line conditions stable through defined equipment checks (circulation/filtration/replenishment)',
];

const evidence = [
  'In-house evaluation of thickness, appearance, and adhesion with data-based history tracking',
  'Support for reliability testing requirements such as salt spray (including CASS when required)',
  'Documented process control and traceability to meet eco-compliance / Hex-free requirements',
  'Process control aligned with quality systems (SQ/ISO, etc.) and customer requirements',
];

const applications = [
  'Automotive interior / decorative trims with high appearance and corrosion-resistance requirements',
  'Mobile and electronics decorative parts (brackets/deco) requiring high surface quality',
  'Product groups where customer compliance requirements (Hex-free) are mandatory',
];

const gallery = [
  {
    src: '/images/capabilities/trivalent-chrome/trivalent-tank.png',
    alt: 'Trivalent chromium plating tank (Trivalent Chromium / TriMac Blue)',
    caption: 'Trivalent Chromium (TriMac Blue) Tank',
  },
  {
    src: '/images/capabilities/trivalent-chrome/passivation-device.png',
    alt: 'Passivation equipment (Tristar Shield)',
    caption: 'Passivation System (Tristar Shield)',
  },
  {
    src: '/images/capabilities/trivalent-chrome/munk-rectifier.png',
    alt: 'Dedicated rectifier: MUNK (Germany)',
    caption: 'Dedicated Rectifier: MUNK (Germany)',
  },
];
---

<BaseLayout title={title} description={description} lang="en" pathPrefix="/en">
  {/* HERO */}
  <section class="rounded-2xl border border-stroke bg-base p-6 shadow-soft">
    <a class="text-sm text-accent hover:underline" href="/en/capabilities/">
      ← Capabilities
    </a>

    <h1 class="mt-2 text-3xl font-semibold tracking-tight md:text-4xl">
      Trivalent Chromium (Hex-free)
    </h1>

    <p class="mt-3 text-sm md:text-base leading-relaxed !text-sub drop-shadow-md">
      SUNGJINLOGIS operates a <span class="text-white font-semibold">Hex-free trivalent chromium</span> process with an
      integrated <span class="text-white font-semibold">passivation</span> system to meet both
      <span class="text-white font-semibold"> regulatory compliance</span> and demanding
      <span class="text-white font-semibold"> corrosion / appearance requirements</span>.
    </p>

    <div class="mt-6 grid gap-4 md:grid-cols-3">
      {highlights.map((h) => (
        <div class="rounded-2xl border border-stroke bg-surface p-5 shadow-soft">
          <div class="text-sm font-semibold text-white">{h.title}</div>
          <p class="mt-2 text-sm text-sub leading-relaxed">{h.desc}</p>
        </div>
      ))}
    </div>
  </section>

  {/* Control Points */}
  <section class="mt-10 rounded-2xl border border-stroke bg-base p-6 shadow-soft">
    <h2 class="text-lg font-semibold">Control Points</h2>
    <p class="mt-2 text-sm text-sub">
      Key control items for appearance and corrosion performance in trivalent chromium.
    </p>

    <div class="mt-4 grid gap-3 md:grid-cols-2">
      {controlPoints.map((t) => (
        <div class="rounded-2xl border border-stroke bg-surface p-4 text-sm text-sub">
          • {t}
        </div>
      ))}
    </div>
  </section>

  {/* Verification Evidence */}
  <section class="mt-10 rounded-2xl border border-stroke bg-base p-6 shadow-soft">
    <h2 class="text-lg font-semibold">Verification Evidence</h2>
    <p class="mt-2 text-sm text-sub">
      We build process confidence through measurable data and systems.
    </p>

    <div class="mt-4 grid gap-3">
      {evidence.map((t) => (
        <div class="rounded-2xl border border-stroke bg-surface p-4 text-sm text-sub">
          • {t}
        </div>
      ))}
    </div>
  </section>

  {/* Typical Applications */}
  <section class="mt-10 rounded-2xl border border-stroke bg-base p-6 shadow-soft">
    <h2 class="text-lg font-semibold">Typical Applications</h2>
    <p class="mt-2 text-sm text-sub">
      Applied to product groups with strict compliance, appearance, and corrosion-performance requirements.
    </p>

    <div class="mt-4 grid gap-3 md:grid-cols-2">
      {applications.map((t) => (
        <div class="rounded-2xl border border-stroke bg-surface p-4 text-sm text-sub">
          • {t}
        </div>
      ))}
    </div>
  </section>

  {/* Equipment Photos */}
  <section class="mt-10 rounded-2xl border border-stroke bg-base p-6 shadow-soft">
    <h2 class="text-lg font-semibold">Equipment Photos</h2>
    <p class="mt-2 text-sm text-sub">
      Example equipment for trivalent chromium, passivation, and rectification.
    </p>

    <div class="mt-4 grid gap-4 md:grid-cols-3">
      {gallery.map((g) => (
        <figure class="overflow-hidden rounded-2xl border border-stroke bg-surface shadow-soft">
          {/* 16:9 frame + contain (no cropping) */}
          <div
            class="flex w-full items-center justify-center bg-base"
            style="aspect-ratio: 16 / 9;"
          >
            <img
              src={g.src}
              alt={g.alt}
              class="max-h-full max-w-full object-contain p-2"
              loading="lazy"
              decoding="async"
            />
          </div>

          <figcaption class="p-3 text-xs text-white/70">
            {g.caption}
          </figcaption>
        </figure>
      ))}
    </div>
  </section>
</BaseLayout>
