---
import BaseLayout from '../../../layouts/BaseLayout.astro';

const title = 'Acid Copper | SUNGJINLOGIS';
const description =
  'A critical leveling base-layer process that strongly influences downstream nickel/chrome quality—ensuring stable appearance, thickness uniformity, and high process repeatability.';

const highlights = [
  {
    title: 'Leveling Base Layer',
    desc: 'Forms a smooth, leveling foundation that directly affects downstream nickel/chrome appearance and supports spec-compliant quality.',
  },
  {
    title: 'Uniform Thickness & Appearance',
    desc: 'Standardizes current, agitation, and bath conditions to minimize area variation and thickness deviation at corners and holes.',
  },
  {
    title: 'Stable Production',
    desc: 'Reduces defect and rework risk through filtration/contamination control and data-driven replenishment management.',
  },
];

const controlPoints = [
  'Maintain target concentrations of CuSO₄ / free acid (H₂SO₄) / Cl⁻ to keep deposition stable',
  'Manage additives (brightener/leveler/carrier) to ensure consistent appearance, leveling, and ductility',
  'Standardize current density/voltage/time to minimize thickness variation (operate recipes by part/rack)',
  'Control temperature/agitation/circulation (flow rate) to stabilize plating rate and appearance uniformity',
  'Use continuous filtration + anode bag management to reduce sludge/particle carry-in',
  'Manage rinsing and drag-out to minimize contamination and bath fluctuation risk',
  'Run periodic Hull Cell tests/analysis to check bath condition and additive balance',
  'Maintain jigs and electrical contacts to prevent burning, skips, and other electrical defects',
];

const evidence = [
  'Manage before/after data for condition changes through in-house thickness measurement (XRF/thickness gauge) and appearance evaluation',
  'Diagnose bath condition, additive balance, and defects (burning/stripes) via Hull Cell testing',
  'Ensure traceability by recording process history (analysis values/replenishment/filtration/changes)',
  'Process control and 대응 based on quality system requirements (SQ/ISO, etc.)',
];

const applications = [
  'Appearance-sensitive parts such as automotive interior/decor trims (foundation for downstream nickel/chrome quality)',
  'Mobile brackets and decorative parts where smoothness and appearance completeness are critical',
  'Products with large area/geometry variations requiring thickness uniformity and spec compliance',
];

const gallery = [
  {
    src: '/images/capabilities/acid-copper/acid-copper-line.png',
    alt: 'Acid copper plating line',
    caption: 'Acid copper line (side view)',
  },
{
    src: '/images/capabilities/acid-copper/acid-copper-line-1.png',
    alt: 'Acid copper plating line',
    caption: 'Acid copper line (front view)',
  },
];
---

<BaseLayout title={title} description={description} lang="en" pathPrefix="/en">
  {/* HERO */}
  <section class="rounded-2xl border border-stroke bg-base p-6 shadow-soft">
    <a class="text-sm text-accent hover:underline" href="/en/capabilities/">
      ← Capabilities
    </a>

    <h1 class="mt-2 text-3xl font-semibold tracking-tight md:text-4xl">Acid Copper</h1>

    <p class="mt-3 text-sm md:text-base leading-relaxed !text-sub drop-shadow-md">
      SUNGJINLOGIS forms a stable <span class="text-white font-semibold">acid copper leveling base layer</span> to support
      <span class="text-white font-semibold"> downstream nickel/chrome appearance</span> and
      <span class="text-white font-semibold"> thickness uniformity</span>.
    </p>

    <div class="mt-6 grid gap-4 md:grid-cols-3">
      {highlights.map((h) => (
        <div class="rounded-2xl border border-stroke bg-surface p-5 shadow-soft">
          <div class="text-sm font-semibold text-white">{h.title}</div>
          <p class="mt-2 text-sm text-sub leading-relaxed">{h.desc}</p>
        </div>
      ))}
    </div>
  </section>

  {/* Control Points */}
  <section class="mt-10 rounded-2xl border border-stroke bg-base p-6 shadow-soft">
    <h2 class="text-lg font-semibold">Control Points</h2>
    <p class="mt-2 text-sm text-sub">Key control items to secure acid copper base-layer quality (leveling/thickness/appearance).</p>

    <div class="mt-4 grid gap-3 md:grid-cols-2">
      {controlPoints.map((t) => (
        <div class="rounded-2xl border border-stroke bg-surface p-4 text-sm text-sub">• {t}</div>
      ))}
    </div>
  </section>

  {/* Verification Evidence */}
  <section class="mt-10 rounded-2xl border border-stroke bg-base p-6 shadow-soft">
    <h2 class="text-lg font-semibold">Verification Evidence</h2>
    <p class="mt-2 text-sm text-sub">We ensure process reliability through measurable data and testing.</p>

    <div class="mt-4 grid gap-3">
      {evidence.map((t) => (
        <div class="rounded-2xl border border-stroke bg-surface p-4 text-sm text-sub">• {t}</div>
      ))}
    </div>
  </section>

  {/* Typical Applications */}
  <section class="mt-10 rounded-2xl border border-stroke bg-base p-6 shadow-soft">
    <h2 class="text-lg font-semibold">Typical Applications</h2>
    <p class="mt-2 text-sm text-sub">Applied to product groups with high appearance/spec requirements.</p>

    <div class="mt-4 grid gap-3 md:grid-cols-2">
      {applications.map((t) => (
        <div class="rounded-2xl border border-stroke bg-surface p-4 text-sm text-sub">• {t}</div>
      ))}
    </div>
  </section>

  {/* Equipment Photos */}
  <section class="mt-10 rounded-2xl border border-stroke bg-base p-6 shadow-soft">
    <h2 class="text-lg font-semibold">Equipment Photos</h2>
    <p class="mt-2 text-sm text-sub">Photos of the acid copper process equipment.</p>

    <div class="mt-4 grid gap-4 md:grid-cols-2">
      {gallery.map((g) => (
        <figure class="overflow-hidden rounded-2xl border border-stroke bg-surface shadow-soft">
          {/* Keep full image (contain) + 16:9 frame */}
          <div class="flex w-full items-center justify-center bg-base" style="aspect-ratio: 16 / 9;">
            <img
              src={g.src}
              alt={g.alt}
              class="max-h-full max-w-full object-contain p-2"
              loading="lazy"
              decoding="async"
            />
          </div>
          <figcaption class="p-3 text-xs text-white/70">{g.caption}</figcaption>
        </figure>
      ))}
    </div>
  </section>
</BaseLayout>
