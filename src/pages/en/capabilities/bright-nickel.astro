---
import BaseLayout from '../../../layouts/BaseLayout.astro';

const title = 'Bright Nickel / Semi-bright Nickel | SUNGJINLOGIS';
const description =
  'A multi-layer nickel stack—semi-bright (base) + bright (top)—to balance premium appearance and corrosion performance.';

const highlights = [
  {
    title: 'Multi-layer Nickel: Semi-bright (Base) + Bright (Top)',
    desc: 'Semi-bright nickel builds a smooth foundation and corrosion base, while bright nickel delivers premium appearance (gloss/color/spot control).',
  },
  {
    title: 'Appearance-focused Operation',
    desc: 'Bath control, filtration, and operating conditions are standardized to reduce surface defects (pits/pinholes/haze) and minimize color/gloss variation.',
  },
  {
    title: 'Specification-driven Control (Thickness/Corrosion/Appearance)',
    desc: 'Process conditions and key control points are combined to meet customer requirements (thickness, appearance, corrosion, downstream chrome, etc.).',
  },
];

const controlPoints = [
  'Standardize bath conditions (concentration/temperature/pH) and additive dosing criteria (brightener/leveler) to minimize color and gloss variation',
  'Check filtration/circulation status to reduce fine particles/suspended solids → manage risks of pits/pinholes/spots',
  'Control current density/voltage/time (including the semi-bright → bright transition) to secure thickness distribution and appearance uniformity',
  'Improve rack contacts and shielding/shadowed areas to reduce non-uniform plating risk (edge build-up / thin deposits in shaded regions)',
  'Manage rinsing and drag-out to minimize contamination ingress and bath fluctuation risk',
  'Use periodic sampling (standard location/standard time) to reduce analytical variability → repeatability-centered management',
];

const evidence = [
  'In-house thickness/appearance/adhesion evaluation and history management based on process data',
  'Support reliability test requirements such as salt spray (including CASS when required)',
  'Secure process traceability through records such as line conditions, replenishment, and filtration replacement history',
  'Process control and 대응 based on quality system requirements (SQ/ISO, etc.)',
];

const applications = [
  'Appearance-critical parts such as automotive interior/decor trims',
  'Mobile/electronics decorative parts (brackets/trim) where surface quality is key',
  'Parts where downstream chrome (including trivalent systems) requires a strong appearance/corrosion foundation',
];

const gallery = [
  {
    src: '/images/capabilities/bright-nickel/bright-carrier.png',
    alt: 'Bright nickel carrier line',
    caption: 'Bright nickel carrier line',
  },
  {
    src: '/images/capabilities/bright-nickel/semi-bright-carrier.png',
    alt: 'Semi-bright nickel carrier line',
    caption: 'Semi-bright nickel carrier line',
  },
];
---

<BaseLayout title={title} description={description} lang="en" pathPrefix="/en">
  {/* HERO */}
  <section class="rounded-2xl border border-stroke bg-base p-6 shadow-soft">
    <a class="text-sm text-accent hover:underline" href="/en/capabilities/">
      ← Capabilities
    </a>

    <h1 class="mt-2 text-3xl font-semibold tracking-tight md:text-4xl">
      Bright Nickel / Semi-bright Nickel
    </h1>

    <p class="mt-3 text-sm md:text-base leading-relaxed !text-sub drop-shadow-md">
      SUNGJINLOGIS secures a balance of <span class="text-white font-semibold">premium appearance</span> and
      <span class="text-white font-semibold"> corrosion performance</span> through a
      <span class="text-white font-semibold"> semi-bright (base) + bright (top) nickel</span> stack.<br />
      Depending on your required specifications, we operate the process based on targets for
      <span class="text-white font-semibold"> thickness, appearance, and downstream processes</span>.
    </p>

    <div class="mt-6 grid gap-4 md:grid-cols-3">
      {highlights.map((h) => (
        <div class="rounded-2xl border border-stroke bg-surface p-5 shadow-soft">
          <div class="text-sm font-semibold text-white">{h.title}</div>
          <p class="mt-2 text-sm text-sub leading-relaxed">{h.desc}</p>
        </div>
      ))}
    </div>
  </section>

  {/* Control Points */}
  <section class="mt-10 rounded-2xl border border-stroke bg-base p-6 shadow-soft">
    <h2 class="text-lg font-semibold">Control Points</h2>
    <p class="mt-2 text-sm text-sub">A summary of key control items for appearance, thickness, and corrosion quality.</p>

    <div class="mt-4 grid gap-3 md:grid-cols-2">
      {controlPoints.map((t) => (
        <div class="rounded-2xl border border-stroke bg-surface p-4 text-sm text-sub">
          • {t}
        </div>
      ))}
    </div>
  </section>

  {/* Verification Evidence */}
  <section class="mt-10 rounded-2xl border border-stroke bg-base p-6 shadow-soft">
    <h2 class="text-lg font-semibold">Verification Evidence</h2>
    <p class="mt-2 text-sm text-sub">We ensure process reliability through measurable data and systems.</p>

    <div class="mt-4 grid gap-3">
      {evidence.map((t) => (
        <div class="rounded-2xl border border-stroke bg-surface p-4 text-sm text-sub">
          • {t}
        </div>
      ))}
    </div>
  </section>

  {/* Typical Applications */}
  <section class="mt-10 rounded-2xl border border-stroke bg-base p-6 shadow-soft">
    <h2 class="text-lg font-semibold">Typical Applications</h2>
    <p class="mt-2 text-sm text-sub">Applied to product groups with high appearance and corrosion requirements.</p>

    <div class="mt-4 grid gap-3 md:grid-cols-2">
      {applications.map((t) => (
        <div class="rounded-2xl border border-stroke bg-surface p-4 text-sm text-sub">
          • {t}
        </div>
      ))}
    </div>
  </section>

  {/* Equipment Photos */}
  <section class="mt-10 rounded-2xl border border-stroke bg-base p-6 shadow-soft">
    <h2 class="text-lg font-semibold">Equipment Photos</h2>
    <p class="mt-2 text-sm text-sub">Carrier lines for the bright/semi-bright nickel processes.</p>

    {/* 2 images => 2 columns, 1 image => 1 column */}
    <div class={`mt-4 grid gap-4 ${gallery.length === 1 ? 'grid-cols-1' : 'grid-cols-1 md:grid-cols-2'}`}>
      {gallery.map((g) => (
        <figure class="overflow-hidden rounded-2xl border border-stroke bg-surface shadow-soft">
          {/* ✅ Prevent pixelation:
              - do not force w-full/h-full scaling
              - object-contain
              - limit max width to 2/3 on md+ (as requested) */}
          <div class="flex w-full items-center justify-center bg-base" style="aspect-ratio: 3 / 4; min-height: 420px;">
            <img
              src={g.src}
              alt={g.alt}
              class="h-auto w-auto max-h-[520px] max-w-full md:max-w-[66%] object-contain"
              loading="lazy"
              decoding="async"
            />
          </div>

          <figcaption class="p-3 text-xs text-white/70">{g.caption}</figcaption>
        </figure>
      ))}
    </div>
  </section>
</BaseLayout>
