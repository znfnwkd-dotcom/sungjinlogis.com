---
import BaseLayout from '../../layouts/BaseLayout.astro';

const title = 'Company | SUNGJINLOGIS';
const description =
  'SUNGJINLOGIS is a specialist in plastic plating and surface finishing for automotive interior and mobile components. We achieve repeatability and color consistency through robotic pretreatment, process stabilization, and in-house verification.';

const companyImages = {
  map: {
    src: '/images/about/location-map.png',
    alt: 'Map guide to SUNGJINLOGIS (Incheon, Korea)',
  },
  exterior: {
    src: '/images/about/factory-exterior.jpg',
    alt: 'SUNGJINLOGIS factory exterior',
  },
};

const companyInfo = [
  { label: 'Legal name', value: 'SUNGJINLOGIS Co., Ltd. (㈜성진로지스)' },
  { label: 'Address', value: '24, Jungbong-daero 240beon-gil, Seo-gu, Incheon, Korea (인천광역시 서구 중봉대로240번길 24)' },
  { label: 'CEO', value: 'Wonseok Ji (지원석)' },
  { label: 'Employees', value: '60' },
  { label: 'Tel', value: '+82-32-573-4789' },
  { label: 'Fax', value: '+82-32-573-4790' },
  { label: 'Email', value: 'chiwon1@daum.net', href: 'mailto:chiwon1@daum.net' },
];

const mapLink =
  'https://www.google.com/maps/search/?api=1&query=%EC%9D%B8%EC%B2%9C%EA%B4%91%EC%97%AD%EC%8B%9C%20%EC%84%9C%EA%B5%AC%20%EC%A4%91%EB%B4%89%EB%8C%80%EB%A1%9C240%EB%B2%88%EA%B8%B8%2024';
---

<BaseLayout title={title} description={description} lang="en" pathPrefix="/en">
  <section class="rounded-2xl border border-stroke bg-surface p-8 shadow-soft">
    <div class="max-w-5xl">
      <a class="text-sm text-accent hover:underline" href="/en/">
        ← Home
      </a>

      <h1 class="mt-2 text-3xl font-semibold tracking-tight md:text-4xl">
        Plastic Plating & Surface Finishing Specialist
      </h1>

      <p class="mt-3 text-sm md:text-base leading-relaxed !text-sub drop-shadow-md">
        At SUNGJINLOGIS, we design and manage our processes around <span class="text-white font-semibold">repeatability</span>,
        delivering stable <span class="text-white font-semibold">color consistency and surface quality</span>.<br />
        We provide plastic plating/surface finishing for <span class="text-white font-semibold">premium appearance parts</span>
        used in automotive interiors and mobile components.
      </p>

      <div class="mt-6 grid gap-4 md:grid-cols-3">
        <div class="rounded-2xl border border-stroke bg-base p-5">
          <div class="text-sm font-semibold">Repeatability-driven Process</div>
          <p class="mt-1 text-sm text-sub">Standardized conditions and variation control to reproduce the same quality</p>
        </div>
        <div class="rounded-2xl border border-stroke bg-base p-5">
          <div class="text-sm font-semibold">Premium Surface Quality</div>
          <p class="mt-1 text-sm text-sub">Quality-first operation focused on appearance, feel, and color matching</p>
        </div>
        <div class="rounded-2xl border border-stroke bg-base p-5">
          <div class="text-sm font-semibold">Eco-friendly Compliance</div>
          <p class="mt-1 text-sm text-sub">Operating a trivalent chromium (Cr3+) line aligned with regulations</p>
        </div>
      </div>

      {/* Company images · Company information */}
      <div class="mt-10 grid gap-6 lg:grid-cols-5">
        {/* Image area */}
        <div class="lg:col-span-3 grid gap-4">
          <figure class="overflow-hidden rounded-2xl border border-stroke bg-base shadow-soft">
            <div class="flex items-center justify-center bg-black/10" style="aspect-ratio: 16 / 10;">
              <img
                src={companyImages.map.src}
                alt={companyImages.map.alt}
                class="h-full w-full object-contain"
                loading="lazy"
                decoding="async"
              />
            </div>
            <figcaption class="px-4 py-3 text-xs text-white/70">
              Location · Incheon, Korea
            </figcaption>
          </figure>

          <figure class="overflow-hidden rounded-2xl border border-stroke bg-base shadow-soft">
            <div class="flex items-center justify-center bg-black/10" style="aspect-ratio: 16 / 10;">
              <img
                src={companyImages.exterior.src}
                alt={companyImages.exterior.alt}
                class="h-full w-full object-cover"
                loading="lazy"
                decoding="async"
              />
            </div>
            <figcaption class="px-4 py-3 text-xs text-white/70">
              Factory Exterior · SUNGJINLOGIS
            </figcaption>
          </figure>
        </div>

        {/* Company info area */}
        <div class="lg:col-span-2 rounded-2xl border border-stroke bg-base p-6 shadow-soft">
          <h2 class="text-lg font-semibold">Company Information</h2>
          <p class="mt-2 text-sm text-sub">
            Key details for consultation and visits.
          </p>

          <dl class="mt-4 divide-y divide-stroke/60">
            {companyInfo.map((row) => (
              <div class="flex items-start justify-between gap-4 py-3">
                <dt class="text-sm text-white/70">{row.label}</dt>
                <dd class="text-sm text-white text-right">
                  {row.href ? (
                    <a class="text-accent hover:underline" href={row.href}>
                      {row.value}
                    </a>
                  ) : (
                    <span>{row.value}</span>
                  )}
                </dd>
              </div>
            ))}
          </dl>

          <div class="mt-5 flex flex-wrap gap-3">
            <a
              class="inline-flex items-center rounded-2xl border border-stroke bg-accent/15 px-4 py-2 text-sm font-semibold text-accent hover:bg-accent/20"
              href={mapLink}
              target="_blank"
              rel="noopener noreferrer"
            >
              View on Google Maps →
            </a>
            <a
              class="inline-flex items-center rounded-2xl border border-stroke bg-white/5 px-4 py-2 text-sm font-semibold text-white hover:bg-white/10"
              href="/en/contact/"
            >
              Contact us →
            </a>
          </div>

          <p class="mt-3 text-xs text-white/60">
            * Address: Incheon, Seo-gu, Jungbong-daero 240beon-gil 24 (인천광역시 서구 중봉대로240번길 24)
          </p>
        </div>
      </div>

      {/* Existing sections */}
      <div class="mt-10 grid gap-6 md:grid-cols-2">
        <div class="rounded-2xl border border-stroke bg-base p-6">
          <h2 class="text-lg font-semibold">Core Capabilities</h2>
          <ul class="mt-3 list-disc space-y-2 pl-5 text-sm text-sub">
            <li><span class="text-white">Robotic pretreatment</span> to secure a uniform quality foundation</li>
            <li><span class="text-white">Matte/Satin process with long-life filtration</span> for stable operation</li>
            <li><span class="text-white">Trivalent chrome (Cr3+)</span> line operation for regulatory compliance</li>
            <li><span class="text-white">Acid copper</span> and <span class="text-white">bright/semi-bright nickel</span> carrier processes</li>
          </ul>
        </div>

        <div class="rounded-2xl border border-stroke bg-base p-6">
          <h2 class="text-lg font-semibold">Key Industries</h2>
          <ul class="mt-3 list-disc space-y-2 pl-5 text-sm text-sub">
            <li>Automotive interior parts</li>
            <li>Mobile components (e.g., camera brackets)</li>
          </ul>

          <div class="mt-6 rounded-2xl border border-stroke bg-surface p-5">
            <div class="text-sm font-semibold">Quality & Certifications</div>
            <p class="mt-1 text-sm text-sub">
              Hyundai SQ · ISO 9001 · GM requirements support (CQI-11)
            </p>
          </div>
        </div>
      </div>

      <div class="mt-10 rounded-2xl border border-stroke bg-base p-6">
        <h2 class="text-lg font-semibold">In-house Verification Equipment</h2>
        <p class="mt-2 text-sm text-sub">
          We manage process trust with measurable data.
        </p>
        <div class="mt-4 grid gap-3 md:grid-cols-2">
          <div class="rounded-2xl border border-stroke bg-surface p-4 text-sm text-sub">Plating Thickness Tester (2 sets)</div>
          <div class="rounded-2xl border border-stroke bg-surface p-4 text-sm text-sub">CASS Tester</div>
          <div class="rounded-2xl border border-stroke bg-surface p-4 text-sm text-sub">Hull Cell Tester</div>
          <div class="rounded-2xl border border-stroke bg-surface p-4 text-sm text-sub">Electron Microscope</div>
          <div class="rounded-2xl border border-stroke bg-surface p-4 text-sm text-sub">Temperature & Humidity Cycle Tester</div>
          <div class="rounded-2xl border border-stroke bg-surface p-4 text-sm text-sub">XRF Thickness Tester</div>
          <div class="rounded-2xl border border-stroke bg-surface p-4 text-sm text-sub">Optical Microscope</div>
          <div class="rounded-2xl border border-stroke bg-surface p-4 text-sm text-sub">Polishing Machine</div>
          <div class="rounded-2xl border border-stroke bg-surface p-4 text-sm text-sub">Thermohygrostat (Constant Temp/Humidity Chamber)</div>
          <div class="rounded-2xl border border-stroke bg-surface p-4 text-sm text-sub">Peel-off Tester (Adhesion)</div>
          <div class="rounded-2xl border border-stroke bg-surface p-4 text-sm text-sub">Quick Thermal Shock Tester</div>
          <div class="rounded-2xl border border-stroke bg-surface p-4 text-sm text-sub">STEP Tester</div>
        </div>
      </div>

      <div class="mt-10 rounded-2xl border border-stroke bg-base p-6">
        <h2 class="text-lg font-semibold">History</h2>
        <div class="mt-4 grid gap-3">
          <div class="rounded-2xl border border-stroke bg-surface p-4 text-sm text-sub"><span class="text-white font-semibold">1995</span> · Founded as Jiwon Industry</div>
          <div class="rounded-2xl border border-stroke bg-surface p-4 text-sm text-sub"><span class="text-white font-semibold">2005</span> · Introduced eco-friendly trivalent chrome technology for mobile components</div>
          <div class="rounded-2xl border border-stroke bg-surface p-4 text-sm text-sub"><span class="text-white font-semibold">2010</span> · Started mass production plating for automotive parts</div>
          <div class="rounded-2xl border border-stroke bg-surface p-4 text-sm text-sub"><span class="text-white font-semibold">2011</span> · ISO 9001 / ISO 14001 certification</div>
          <div class="rounded-2xl border border-stroke bg-surface p-4 text-sm text-sub"><span class="text-white font-semibold">2014</span> · Incorporated as SUNGJINLOGIS Co., Ltd.</div>
          <div class="rounded-2xl border border-stroke bg-surface p-4 text-sm text-sub"><span class="text-white font-semibold">2017</span> · Achieved Hyundai SQ certification</div>
          <div class="rounded-2xl border border-stroke bg-surface p-4 text-sm text-sub"><span class="text-white font-semibold">2020</span> · IATF 16949 certification</div>
          <div class="rounded-2xl border border-stroke bg-surface p-4 text-sm text-sub"><span class="text-white font-semibold">2021</span> · Built a robotic plastic plating line (Plant 2)</div>
          <div class="rounded-2xl border border-stroke bg-surface p-4 text-sm text-sub"><span class="text-white font-semibold">2023</span> · Built an eco-friendly trivalent chrome plating line</div>
          <div class="rounded-2xl border border-stroke bg-surface p-4 text-sm text-sub"><span class="text-white font-semibold">2024</span> · Registered as an approved supplier for a global premium OEM (trivalent chrome)</div>
          <div class="rounded-2xl border border-stroke bg-surface p-4 text-sm text-sub"><span class="text-white font-semibold">2025</span> · Built an electroless nickel plating line (Plant 3)</div>
          <div class="rounded-2xl border border-stroke bg-surface p-4 text-sm text-sub"><span class="text-white font-semibold">2026</span> · Registered as a GM Tier-2 supplier for trivalent chrome</div>
        </div>
      </div>

      <div class="mt-10 flex flex-wrap items-center gap-3">
        <a
          class="rounded-2xl bg-accent px-5 py-3 text-sm font-semibold text-white hover:bg-accent-hover transition"
          href="/en/downloads/"
        >
          Download Company Profile
        </a>
        <a
          class="rounded-2xl border border-stroke bg-base px-5 py-3 text-sm font-semibold text-white hover:bg-surface transition"
          href="/en/capabilities/"
        >
          View Capabilities
        </a>
        <a class="text-sm text-accent hover:text-accent-hover" href="mailto:chiwon1@kakao.net">
          Email: chiwon1@kakao.net →
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
