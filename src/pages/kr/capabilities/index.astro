---
import BaseLayout from '../../../layouts/BaseLayout.astro';

const title = 'Capabilities | 성진로지스';
const description = '로봇 전처리, 무광, 3가크롬, 유산동, 광택/반광 니켈 등 공정 역량';

const items = [
  { slug: 'robotic-pretreatment', name: '로봇 전처리', desc: '공정 재현성을 높이는 균일 전처리' },
  { slug: 'matte-satin', name: '무광/반무광 + 롱라이프 여과', desc: '외관 균일과 이물 저감' },
  { slug: 'trivalent-chrome', name: '친환경 3가 크롬', desc: 'Hex-free, 규제 대응 표면품질' },
  { slug: 'acid-copper', name: '유산동', desc: '기초 품질을 만드는 핵심 공정' },
  { slug: 'bright-nickel', name: '광택 니켈', desc: '프리미엄 광택과 외관 완성도' },
  { slug: 'semi-bright-nickel', name: '반광 니켈', desc: '심미성과 내구의 균형' }
];
---
<BaseLayout title={title} description={description} lang="ko" pathPrefix="/kr">
  <section>
    <h1 class="text-2xl font-semibold">Capabilities</h1>
    <p class="mt-2 text-sm text-sub">각 공정 페이지는 나중에 사진/공정 플로우/관리포인트로 확장합니다.</p>

    <div class="mt-6 grid gap-4 md:grid-cols-2 lg:grid-cols-3">
      {items.map((i) => (
        <a class="rounded-xl2 border border-stroke bg-surface p-5 shadow-soft hover:border-accent transition" href={`/kr/capabilities/${i.slug}/`}>
          <div class="text-sm font-semibold">{i.name}</div>
          <div class="mt-1 text-sm text-sub">{i.desc}</div>
        </a>

      ))}
    </div>
  </section>
</BaseLayout>
