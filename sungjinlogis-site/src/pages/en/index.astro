---
import BaseLayout from '../../layouts/BaseLayout.astro';

const title = 'SUNGJINLOGIS | Premium Plating & Surface Finishing';
const description = 'Premium plating partner focused on repeatability, color consistency, and low defect rate.';
---
<BaseLayout title={title} description={description} lang="en" pathPrefix="/en">
  <section class="relative overflow-hidden rounded-xl2 border border-stroke bg-surface p-8 shadow-soft">
    <h1 class="text-3xl font-semibold">English site is being prepared</h1>
    <p class="mt-3 text-sm text-sub">
      For now, please refer to the Korean site. We will replace this page with a full EN version soon.
    </p>
    <div class="mt-6 flex flex-wrap gap-3">
      <a class="rounded-xl bg-accent px-4 py-3 text-sm font-semibold text-white hover:bg-accent-hover transition" href="/kr/">
        Go to Korean site
      </a>
    </div>
  </section>
</BaseLayout>
